| !{partial('_partial/head')}
body
    div(class='container-fluid')
        div(class='row')
            div(class='col-md-4 left-panel')
                div(class='text-center')
                    h1(class='blog-title') #{config.title}
                    h2(class='blog-subtitle') #{config.subtitle}

                nav(class="nav flex-column" id='main-menu')
                    each item in theme.menu
                        a(class='nav-link' + (is_current(item.url) ? ' active' : ''), href=url_for(item.url))
                            span(class='oi oi-' + item.icon)
                            = item.name
            div(class='col-md-8', id='content')
                | !{body}
| !{partial('_partial/footer')}
